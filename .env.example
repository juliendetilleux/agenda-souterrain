# ============================================================================
# Agenda Souterrain — Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values.
# This file is loaded by docker-compose.yml and the backend.
# NEVER commit .env to git — it contains secrets.
# For production env vars, see docs/deployment.md
# ============================================================================

# --- Core ---
SECRET_KEY=change-me-generate-with-openssl-rand-base64-32
ADMIN_EMAIL=your-admin@email.com

# --- PostgreSQL (used by docker-compose to create the local DB) ---
POSTGRES_PASSWORD=password

# --- Email (Resend — leave empty to disable emails in dev) ---
RESEND_API_KEY=
EMAIL_FROM=Agenda Souterrain <onboarding@resend.dev>

# --- Translation ---
# Options: "libretranslate" (local Docker), "mymemory", "lingva"
TRANSLATION_BACKEND=libretranslate
LIBRETRANSLATE_URL=http://libretranslate:5000

# --- File Storage ---
# "local" for dev (filesystem), "r2" for production (Cloudflare R2)
STORAGE_BACKEND=local
# R2 settings — only needed when STORAGE_BACKEND=r2
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET=
R2_PUBLIC_URL=

# --- Cookies ---
# Domain for auth cookies — empty for local dev, ".agenda-souterrain.com" in prod
COOKIE_DOMAIN=
# Secure flag (HTTPS only) — false for local dev, true in prod
COOKIE_SECURE=false

# --- Self-ping (prevents Render free-tier sleep — leave empty for local) ---
SELF_PING_URL=

# --- Frontend (only needed when building for production) ---
# VITE_API_URL=https://api.agenda-souterrain.com/v1
